<UserControl x:Class="Bachelor_Net60.Views.ProductDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bachelor_Net60.Views"
             xmlns:cmd="clr-namespace:Bachelor_Net60.Infrastructure.Commands"             
             d:DesignHeight="200" d:DesignWidth="200"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid MinWidth="200" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Категория" Margin="5"/>
            <TextBox Text="{Binding Category}"
                     Margin="5" Width="100"
                     Focusable="False"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Название" Margin="5"/>
            <TextBox Text="{Binding ProductName}" Margin="5" Width="100"/>
        </StackPanel>
        <DataGrid Grid.Row="2" MinHeight="100" Margin="5">

        </DataGrid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Grid.Row="3"
                    HorizontalAlignment="Center"
                    Margin="5"
                    IsDefault="True"
                    Content="Редактировать"/>
            <Button Grid.Row="3"
                    HorizontalAlignment="Center"
                    Margin="5"
                    IsCancel="True"
                    Content="Удалить"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:ProductEditView}}">
                <Button.Command>
                    <cmd:CancelEditCommand DialogResult="False"/>
                </Button.Command>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>